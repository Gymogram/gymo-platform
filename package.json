{
  "name": "gymogram_api",
  "jest": {
    "testEnvironment": "node"
  },
  "version": "1.0.0",
  "description": "Gymogram Restful API",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "coverage": "cross-env  NODE_ENV=test DEBUG=gymogram_api:* nyc --reporter=text --reporter=html mocha --require esm --exit",
    "dev": "cross-env NODE_ENV=development nodemon dist/index.bundle.js",
    "dev-debug": "cross-env NODE_ENV=development nodemon --inspect dist/index.bundle.js",
    "dev:build": "yarn run clean && webpack -w --mode development",
    "test-check": "cross-env NODE_ENV=test DEBUG=gymogram_api:* mocha --require esm  --timeout 9000 --exit",
    "test": "cross-env NODE_ENV=test nodemon --inspect dist/index.bundle.js"
  },
  "nyc": {
    "_comment": "Purpose of this part: to do code coverage within Mocha/Chai using Istanbul",
    "register": "babel-register",
    "include": [
      "**/*.js",
      "./*.js"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/test/**",
      "**/coverage/**"
    ],
    "all": true
  },
  "author": "Alejandro Constela",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.1.6",
    "@babel/runtime": "^7.3.1",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "config": "^3.0.1",
    "cross-env": "^5.2.0",
    "debug": "^4.1.1",
    "express": "^4.16.4",
    "express-async-errors": "^3.1.1",
    "express-validation": "^1.0.2",
    "helmet": "^3.15.0",
    "http-status": "^1.3.1",
    "istanbul": "^0.4.5",
    "joi": "^14.3.1",
    "joi-objectid": "^2.0.0",
    "joi-password-complexity": "^2.0.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "mocha": "^6.1.4",
    "moment": "^2.24.0",
    "mongoose": "^5.4.2",
    "mongoose-validator": "^2.1.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-object-assign": "^7.0.0",
    "@babel/plugin-transform-react-jsx": "^7.1.6",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "8.0.4",
    "chai": "^4.2.0",
    "chai-arrays": "^2.0.0",
    "chai-datetime": "^1.5.0",
    "chai-http": "^4.2.1",
    "chai-passport-strategy": "^1.0.1",
    "chai-sorted": "^0.2.0",
    "chai-things": "^0.2.0",
    "eslint-config-equimper": "^2.2.2",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.17.2",
    "esm": "^3.2.22",
    "jest": "^24.7.0",
    "morgan": "^1.9.1",
    "nyc": "^14.0.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "supertest": "^4.0.2",
    "webpack": "^4.28.1",
    "webpack-cli": "^3.2.1",
